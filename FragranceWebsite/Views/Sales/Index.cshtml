
@{
    ViewData["Title"] = "Sales List";
}

<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Sales List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary text-white"><i class="fa fa-plus"></i> &nbsp; Create Sale</a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:#cde8e2; width:100%" class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <th>Name</th>
                    <th>Address</th>
                    <th>Fragrance</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Datetime</th>
                    <th>Final Price</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/sale.js"></script>
}

